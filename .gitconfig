# vim: set sw=2 sts=2 ts=2 noexpandtab :
[include]
	path = /home/leons/themes.gitconfig

[color]
	ui = auto
	branch = auto
	diff = auto
	grep = auto
	interactive = auto
	status = auto

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
	features = collared-trogon
	features = chameleon
  navigate = true  # use n and N to move between diff sections
#  dark = true      # or light = true, or omit for auto-detection
[merge]
    conflictstyle = zdiff3
[user]
	email = leon.strong@oss-group.co.nz
	name = Leon Strong

[push]
default = matching

[init]
	defaultBranch = main

[credential]
	helper = store
